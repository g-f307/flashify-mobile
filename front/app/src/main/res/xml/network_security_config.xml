<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
    Configuração base. Por defeito, confia nos certificados padrão do sistema,
    mas bloqueia tráfego HTTP (cleartext).

    Ou seja, esse código é necessário para executar nos HTTPS não confiaveis no teu próprio dispositivo
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!--
    Configuração específica para o nosso ambiente de desenvolvimento local.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!--
        Esta regra permite tráfego HTTP (não encriptado) APENAS para o endereço IP
        10.0.2.2, que é o endereço especial que o emulador Android usa para
        comunicar com o 'localhost' da sua máquina.
        -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.137.8</domain>
        <domain includeSubdomains="true">172.25.21.158</domain>
        <domain includeSubdomains="true">192.168.137.182</domain>
        <domain includeSubdomains="true">192.168.15.5</domain>
        <domain includeSubdomains="true">192.168.1.28</domain>
        <domain includeSubdomains="true">192.168.137.101</domain>
    </domain-config>
</network-security-config>

